<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CorpChat.DialogsScroll"
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <ImageButton Source="lupa.png" x:Name="Find_Button" Clicked="Find_Button_Clicked" HorizontalOptions="Start" BackgroundColor="#00000000"></ImageButton>
                <Image Source="iconmain.png" HorizontalOptions="CenterAndExpand"></Image>
                <ImageButton x:Name="LogOut" Source="logout.png" HorizontalOptions="End" Clicked="LogOut_Clicked" BackgroundColor="#00000000"></ImageButton>
            </StackLayout>
            <ScrollView x:Name="Scroll_Dialogs" Orientation="Vertical">
                <StackLayout Orientation="Vertical" x:Name="Scroll_Layout_Dialogs">

                </StackLayout>
            </ScrollView>
        </StackLayout>
        </ContentPage.Content>
</ContentPage>